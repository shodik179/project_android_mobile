<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/top">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/lingkaran"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/menugaris"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/menugaris" />


        <ImageView
            android:id="@+id/imageView3"
            android:paddingTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/profil"
            android:layout_weight="1"
            android:layout_marginLeft="190dp"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/notif"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Selamat Datang"
        android:textSize="20sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:text="Shodik"
        android:textSize="17sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama"
        app:srcCompat="@drawable/hand_hello"
        android:paddingLeft="70dp"
        android:layout_marginTop="-24dp"/>
    <LinearLayout
        android:background="@drawable/splashsaldo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:elevation="15dp"
        android:padding="15dp">
        <RelativeLayout
            android:id="@+id/shap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="3dp"
                android:text="Saldo :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/jumsaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/saldo"
                    android:textColor="@color/black"
                    android:text="Rp 100.000"/>
            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saldo"
                android:paddingRight="3dp"
                android:text="Coin  :"
                android:textStyle="bold"
                android:textColor="@color/black"/>
           <TextView
               android:id="@+id/jumcoin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_below="@+id/jumsaldo"
               android:layout_toEndOf="@+id/coin"
               android:textColor="@color/black"
               android:text="Rp 20.000" />

            <ImageView
                android:id="@+id/addsaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/add_saldo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"/>
            <TextView
                android:id="@+id/saldotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Add Saldo"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/addcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ad_coin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:layout_below="@+id/addsaldo" />
            <TextView
                android:id="@+id/cointext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/saldotext"
                android:text="Add Coin"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto"
            android:text="Layanan Kami"
            android:layout_marginBottom="200dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:layout_marginTop="270dp">

                <ImageButton
                    android:id="@+id/kiloan"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/splashsaldo"
                    android:contentDescription="kilo"
                    android:cropToPadding="true"
                    android:padding="20dp"
                    app:srcCompat="@drawable/m_timbangan" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textshape"/>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:backgroundTint="@color/blue"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="right"
                    android:layout_weight=" 1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/splashsaldo"
                    android:backgroundTint="@color/white"
                    android:contentDescription="satuan"
                    android:padding="20dp"
                    android:src="@drawable/m_dreees" />
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="60dp"
                    android:backgroundTint="@color/blue"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/imageView5"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/splashsaldo"
                    android:contentDescription="vip"
                    android:padding="20dp"
                    app:srcCompat="@drawable/m_vip" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kiloan"
                    android:fontFamily="@font/roboto"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="-6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="satuan"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="vip"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/selimut"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/splashsaldo"
                    android:contentDescription="seli"
                    android:cropToPadding="true"
                    android:padding="20dp"
                    android:src="@drawable/selimut_foreground" />
                <RelativeLayout
                    android:backgroundTint="@color/blue"
                    android:background="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/strika"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/splashsaldo"
                    android:contentDescription="set"
                    android:cropToPadding="true"
                    android:padding="20dp"
                    android:src="@drawable/m_setrika" />
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blue"/>

                <ImageButton
                    android:id="@+id/xpres"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/splashsaldo"
                    android:contentDescription="ex"
                    android:cropToPadding="true"
                    android:padding="20dp"
                    android:src="@drawable/m_express" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selimut"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="-6dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Setrika"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expess"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pes">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="50dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\t\tPesanan No.0099567"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/buttonradius"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="textStart"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/buttonradius"
                    android:text="\t\t\tPesanan No.0099568"
                    android:textAlignment="textStart"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingTop="10dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/white"
            android:background="@drawable/splashsaldo">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/splashsaldo"
                android:contentDescription="home"
                android:src="@drawable/b_home" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/splashsaldo"
                android:contentDescription="@string/app_name"
                android:src="@drawable/b_pesanan" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/splashsaldo"
                android:contentDescription="akun"
                android:src="@drawable/b_akun" />
        </LinearLayout></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/texth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/biru"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="52dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:layout_alignParentRight="true"
            android:layout_marginRight="54dp"/>


    </RelativeLayout>


</RelativeLayout>